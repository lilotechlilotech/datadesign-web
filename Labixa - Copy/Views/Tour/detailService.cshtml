@{
    ViewBag.Title = "detailTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Outsourcing.Data.Models.Product
<section class="header-page fade-up header-page-about-us" style="background-size: 100% auto;">
    @*<div class="bounce-in animate4">
        
    </div>*@
    <img src="~/Content/Pioneer/img/rev-slider/3/slide3.jpg" style="width: 100%;
height: 300px;" />
</section>
<div class="divider"><span></span></div>
@if (Model != null)
{
    
<section id="internalpage">
    <div class="container banner" style="width: 18%; float: left; margin-left: 0.4%; margin-right: 1.5%;">
        <img src="~/Content/Pioneer/img/maybay.png" style="width: 100%; box-shadow: 7px 7px 7px lightcyan; margin-bottom: 3%; " />
        <img src="~/Content/Pioneer/img/maybay.png" style="width: 100%; box-shadow: 7px 7px 7px lightcyan" />
    </div>
    <!--start container-->
    <div class="contentDetail container clearfix" style="width: 60%;">


        <!--start content-->
        <div class="grid_8 centersinglegrid">
            @{int i = 1;
            HttpCookie cookie = Request.Cookies["_culture"];
            }
            @if (cookie.Value.Equals("vi"))
            {
            <!--start post-->
                <div class="singlepost orange">



                    <h1 class="titlesinglepost" style="color: #009cff;">@Model.Name.ToUpper()</h1>
                    @Html.Raw(Model.Content)
                </div>
            <!--end post-->
            }
            else
            {
            <!--start post-->
                <div class="singlepost orange">



                    <h1 class="titlesinglepost" style="color: #009cff;">@Model.NameEng.ToUpper()</h1>
                    @Html.Raw(Model.ContentEng)
                </div>
            <!--end post-->
            }

        </div>
        <!--end content-->

    </div>
    <!--end container-->
    <div class="container banner" style="width: 18%; float: left; background-color: red; margin-left: 1%;">
        <img src="~/Content/Pioneer/img/xemaydung.png" style="width:100%" />
        <img src="~/Content/Pioneer/img/xemaydung.png" style="width:100%" />
